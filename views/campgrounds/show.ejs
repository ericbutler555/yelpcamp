<% include ../partials/top %>

<div class="row">

  <div class="col-md-3">
    <p class="lead">YelpCamp</p>
    <ul class="list-group">
      <li class="list-group-item active">Item 1</li>
      <li class="list-group-item">Item 2</li>
      <li class="list-group-item">Item 3</li>
    </ul>
  </div>

  <div class="col-md-9">

    <div class="thumbnail campground-detail">
      <img src="<%= campground.image %>" alt="<%= campground.name %>">
      <div class="caption">
        <p class="pull-right text-success campground-price"><strong>$9.00/night</strong></p>
        <h1><a href="#"><%= campground.name %></a></h1>
        <p><%= campground.description %></p>
        <p class=""><a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a></p>
      </div>
    </div>

    <div class="well comments">
      <p class="pull-right"><a class="btn btn-sm btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a comment</a></p>
      <h3>Comments</h3>

<% campground.comments.forEach(function(comment){ %>

      <div class="comment">
        <p>
          &ldquo;<%= comment.text %>&rdquo;<br>
          <small>&mdash;<%= comment.author %>, 10 days ago</small>
        </p>
      </div>

<% }); %>

    </div>

  </div>

</div>

<hr>

<a class="btn btn-default" href="/campgrounds">&laquo; All campgrounds</a>

</div>

<% include ../partials/bottom %>
