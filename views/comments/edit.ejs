<% include ../partials/top %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1 class="page-header">Edit comment</h1>

    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=put" method="post">

      <div class="form-group">
        <label for="commentText">Comment</label>
        <textarea class="form-control" name="comment[text]" id="commentText" placeholder="Add your comment"><%= comment.text %></textarea>
      </div>

      <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Edit">
        <a class="btn btn-default" href="/campgrounds/<%= campgroundId %>">Cancel</a>
      </div>

    </form>

  </div>
</div>

<% include ../partials/bottom %>
